<!DOCTYPE html>
<html lang="pt-BR" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CertificaFácil - Certificado Encontrado</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: {
                50: "#eff6ff",
                100: "#dbeafe",
                200: "#bfdbfe",
                300: "#93c5fd",
                400: "#60a5fa",
                500: "#3b82f6",
                600: "#2563eb",
                700: "#1d4ed8",
                800: "#1e40af",
                900: "#1e3a8a",
              },
            },
            animation: {
              "fade-in": "fadeIn 0.5s ease-in-out",
              "slide-up": "slideUp 0.5s ease-out",
              "bounce-in": "bounceIn 0.6s ease-out",
              "pulse-slow": "pulse 3s ease-in-out infinite",
              celebration: "celebration 1s ease-out",
            },
            keyframes: {
              fadeIn: {
                "0%": { opacity: "0" },
                "100%": { opacity: "1" },
              },
              slideUp: {
                "0%": { transform: "translateY(100px)", opacity: "0" },
                "100%": { transform: "translateY(0)", opacity: "1" },
              },
              bounceIn: {
                "0%": { transform: "scale(0.3)", opacity: "0" },
                "50%": { transform: "scale(1.05)" },
                "70%": { transform: "scale(0.9)" },
                "100%": { transform: "scale(1)", opacity: "1" },
              },
              celebration: {
                "0%": { transform: "scale(0) rotate(0deg)" },
                "50%": { transform: "scale(1.2) rotate(180deg)" },
                "100%": { transform: "scale(1) rotate(360deg)" },
              },
            },
          },
        },
      };
    </script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, sans-serif;
      }

      .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }

      .card-shadow {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
          0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }

      .btn-hover:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      }

      .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
      }

      .shape {
        position: absolute;
        opacity: 0.1;
        animation: float 6s ease-in-out infinite;
      }

      .shape:nth-child(1) {
        top: 10%;
        left: 10%;
        animation-delay: 0s;
      }
      .shape:nth-child(2) {
        top: 20%;
        right: 10%;
        animation-delay: 1s;
      }
      .shape:nth-child(3) {
        bottom: 10%;
        left: 20%;
        animation-delay: 2s;
      }
      .shape:nth-child(4) {
        bottom: 20%;
        right: 20%;
        animation-delay: 3s;
      }

      @keyframes float {
        0%,
        100% {
          transform: translateY(0px) rotate(0deg);
        }
        50% {
          transform: translateY(-20px) rotate(180deg);
        }
      }

      .celebration-particle {
        position: absolute;
        width: 8px;
        height: 8px;
        background: linear-gradient(45deg, #3b82f6, #10b981, #f59e0b);
        border-radius: 50%;
        animation: particle 2s ease-out forwards;
        pointer-events: none;
      }

      @keyframes particle {
        0% {
          transform: translateY(0) rotate(0deg);
          opacity: 1;
        }
        100% {
          transform: translateY(-100px) rotate(360deg);
          opacity: 0;
        }
      }

      .success-glow {
        animation: successGlow 2s ease-in-out infinite alternate;
      }

      @keyframes successGlow {
        0% {
          box-shadow: 0 0 20px rgba(34, 197, 94, 0.3);
        }
        100% {
          box-shadow: 0 0 40px rgba(34, 197, 94, 0.6);
        }
      }
    </style>
  </head>
  <body class="h-full bg-gray-50">
    <!-- Floating Shapes Background -->
    <div class="floating-shapes">
      <div class="shape w-32 h-32 bg-blue-500 rounded-full"></div>
      <div class="shape w-24 h-24 bg-purple-500 rounded-full"></div>
      <div class="shape w-40 h-40 bg-indigo-500 rounded-full"></div>
      <div class="shape w-28 h-28 bg-pink-500 rounded-full"></div>
    </div>

    <!-- Header -->
    <header class="bg-white shadow-lg border-b border-gray-200 relative z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-6">
          <div class="flex items-center">
            <a href="/" class="flex items-center">
              <div
                class="flex-shrink-0 bg-gradient-to-r from-primary-500 to-purple-600 p-3 rounded-xl"
              >
                <i class="fas fa-certificate text-white text-2xl"></i>
              </div>
              <div class="ml-4">
                <h1 class="text-2xl font-bold text-gray-900">CertificaFácil</h1>
                <p class="text-sm text-gray-600">
                  Sistema de Certificados Digitais
                </p>
              </div>
            </a>
          </div>
          <div class="flex items-center space-x-4">
            <a
              href="/"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >
              <i class="fas fa-arrow-left mr-2"></i>
              Voltar
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 relative z-10 py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Success Content -->
        <div class="text-center mb-12 animate-bounce-in">
          <div
            class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full mb-6 animate-celebration success-glow"
          >
            <i class="fas fa-check-circle text-green-600 text-3xl"></i>
          </div>
          <h1 class="text-4xl font-bold text-gray-900 mb-4">
            Certificado Encontrado!
          </h1>
          <p class="text-xl text-gray-600">
            Seu certificado está pronto para download
          </p>
        </div>

        <!-- Certificate Card -->
        <div class="bg-white rounded-2xl card-shadow p-8 mb-8 animate-slide-up">
          <div class="flex items-center justify-center mb-8">
            <div
              class="w-24 h-24 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center animate-pulse-slow"
            >
              <i class="fas fa-certificate text-white text-3xl"></i>
            </div>
          </div>

          <div class="text-center space-y-4">
            <h2 class="text-2xl font-bold text-gray-900">
              Certificado de Participação
            </h2>

            <div class="bg-gray-50 rounded-xl p-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="flex items-center">
                  <div
                    class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3"
                  >
                    <i class="fas fa-user text-blue-600"></i>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500">Nome</p>
                    <p
                      class="font-semibold text-gray-900"
                      id="participant-name"
                    >
                      <%- nome %>
                    </p>
                  </div>
                </div>

                <div class="flex items-center">
                  <div
                    class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3"
                  >
                    <i class="fas fa-id-card text-purple-600"></i>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500">CRM</p>
                    <p class="font-semibold text-gray-900" id="participant-crm">
                      <%- crm %>
                    </p>
                  </div>
                </div>

                <div class="flex items-center">
                  <div
                    class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3"
                  >
                    <i class="fas fa-calendar text-green-600"></i>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500">Data de Emissão</p>
                    <p class="font-semibold text-gray-900" id="issue-date"></p>
                  </div>
                </div>

                <div class="flex items-center">
                  <div
                    class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center mr-3"
                  >
                    <i class="fas fa-file-pdf text-orange-600"></i>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500">Formato</p>
                    <p class="font-semibold text-gray-900">PDF Digital</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Download Section -->
        <div
          class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 text-white text-center animate-slide-up"
        >
          <h3 class="text-2xl font-bold mb-4">Pronto para baixar!</h3>
          <p class="text-blue-100 mb-8">
            Clique no botão abaixo para fazer o download do seu certificado em
            PDF
          </p>

          <div
            class="flex flex-col sm:flex-row gap-4 justify-center items-center"
          >
            <button
              id="download-btn"
              type="button"
              onclick="downloadCertificate()"
              class="inline-flex items-center bg-white text-blue-600 font-semibold px-8 py-4 rounded-xl hover:bg-gray-50 transition-all duration-200 btn-hover card-shadow"
            >
              <i class="fas fa-download mr-2"></i>
              Baixar Certificado PDF
            </button>

            <div class="text-blue-100 text-sm">
              <i class="fas fa-info-circle mr-2"></i>
              O download será iniciado automaticamente
            </div>
          </div>
        </div>

        <!-- Instructions -->
        <div
          class="mt-8 bg-yellow-50 border border-yellow-200 rounded-xl p-6 animate-fade-in"
        >
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <i class="fas fa-lightbulb text-yellow-600 text-lg"></i>
            </div>
            <div class="ml-3">
              <h4 class="text-lg font-semibold text-yellow-800 mb-2">
                Instruções importantes:
              </h4>
              <ul class="text-yellow-700 space-y-1">
                <li>• O certificado será baixado em formato PDF</li>
                <li>• Mantenha o arquivo em local seguro</li>
                <li>• O certificado possui validade nacional</li>
                <li>• Em caso de problemas, entre em contato conosco</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white relative z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <div class="flex items-center mb-4">
              <div
                class="bg-gradient-to-r from-primary-500 to-purple-600 p-2 rounded-lg"
              >
                <i class="fas fa-certificate text-white"></i>
              </div>
              <span class="ml-3 text-xl font-bold">CertificaFácil</span>
            </div>
            <p class="text-gray-400">
              Sistema seguro e confiável para emissão de certificados digitais.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Segurança</h3>
            <ul class="space-y-2 text-gray-400">
              <li>
                <i class="fas fa-check text-green-500 mr-2"></i>Criptografia
                avançada
              </li>
              <li>
                <i class="fas fa-check text-green-500 mr-2"></i>Rate limiting
              </li>
              <li>
                <i class="fas fa-check text-green-500 mr-2"></i>Validação
                rigorosa
              </li>
              <li>
                <i class="fas fa-check text-green-500 mr-2"></i>Logs de
                auditoria
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Suporte</h3>
            <ul class="space-y-2 text-gray-400">
              <li>
                <i class="fas fa-envelope mr-2"></i>contato@certificafacil.com
              </li>
              <li><i class="fas fa-phone mr-2"></i>(11) 9999-9999</li>
              <li>
                <i class="fas fa-clock mr-2"></i>Segunda à Sexta, 8h às 18h
              </li>
            </ul>
          </div>
        </div>
        <div
          class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400"
        >
          <p>&copy; 2024 CertificaFácil. Todos os direitos reservados.</p>
        </div>
      </div>
    </footer>

    <!-- Scripts -->
    <script>
      // Set current date
      document.getElementById("issue-date").textContent =
        new Date().toLocaleDateString("pt-BR");

      // Create celebration particles
      function createCelebrationParticles() {
        const colors = ["#3b82f6", "#10b981", "#f59e0b", "#ef4444", "#8b5cf6"];
        const container = document.body;

        for (let i = 0; i < 20; i++) {
          setTimeout(() => {
            const particle = document.createElement("div");
            particle.className = "celebration-particle";
            particle.style.backgroundColor =
              colors[Math.floor(Math.random() * colors.length)];
            particle.style.left = Math.random() * window.innerWidth + "px";
            particle.style.top = window.innerHeight + "px";

            // Random horizontal movement
            particle.style.setProperty(
              "--random-x",
              (Math.random() - 0.5) * 200 + "px"
            );

            container.appendChild(particle);

            // Remove particle after animation
            setTimeout(() => {
              if (particle.parentNode) {
                particle.parentNode.removeChild(particle);
              }
            }, 2000);
          }, i * 100);
        }
      }

      // Download certificate function

      function downloadCertificate(event) {
        createCelebrationParticles(); // sua animação

        const button = event.target.closest("button");
        const originalText = button.innerHTML;

        button.innerHTML =
          '<i class="fas fa-spinner fa-spin mr-2"></i>Preparando download...';
        button.disabled = true;

        const crm = document
          .getElementById("participant-crm")
          .textContent.trim();

        setTimeout(() => {
          button.innerHTML =
            '<i class="fas fa-check mr-2"></i>Download iniciado!';

          const link = document.createElement("a");
          link.href = `/certificado/${crm}`;
          link.download = `certificado_${crm.replace("-", "_")}.pdf`;
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);

          setTimeout(() => {
            button.innerHTML = originalText;
            button.disabled = false;
          }, 1000);
        }, 2000);
      }

      document
        .getElementById("download-btn")
        .addEventListener("click", downloadCertificate);

      // Auto-hide alerts
      document.addEventListener("DOMContentLoaded", function () {
        const alerts = document.querySelectorAll(".alert-auto-hide");
        alerts.forEach((alert) => {
          setTimeout(() => {
            alert.style.transition = "opacity 0.5s ease-out";
            alert.style.opacity = "0";
            setTimeout(() => {
              if (alert.parentNode) {
                alert.parentNode.removeChild(alert);
              }
            }, 500);
          }, 5000);
        });
      });

      // Add some interactive hover effects
      document.addEventListener("DOMContentLoaded", function () {
        const cards = document.querySelectorAll(".card-shadow");
        cards.forEach((card) => {
          card.addEventListener("mouseenter", function () {
            this.style.transform = "translateY(-5px)";
            this.style.transition = "transform 0.3s ease";
          });

          card.addEventListener("mouseleave", function () {
            this.style.transform = "translateY(0)";
          });
        });
      });

      // Add loading animation on page load
      window.addEventListener("load", function () {
        setTimeout(() => {
          createCelebrationParticles();
        }, 1000);
      });
    </script>
  </body>
</html>
