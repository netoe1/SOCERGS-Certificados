      // Create celebration particles
      function createCelebrationParticles() {
        const container = document.getElementById("particles-container");
        const colors = ["#dc2626", "#ef4444", "#f87171", "#fca5a5"];

        for (let i = 0; i < 30; i++) {
          setTimeout(() => {
            const particle = document.createElement("div");
            particle.className = "particle";
            particle.style.backgroundColor =
              colors[Math.floor(Math.random() * colors.length)];
            particle.style.left = Math.random() * window.innerWidth + "px";
            particle.style.animationDelay = Math.random() * 3 + "s";
            particle.style.animationDuration = Math.random() * 3 + 2 + "s";

            container.appendChild(particle);

            setTimeout(() => {
              if (particle.parentNode) {
                particle.parentNode.removeChild(particle);
              }
            }, 5000);
          }, i * 100);
        }
      }

      // Download certificate function
      function downloadCertificate(event) {
        createCelebrationParticles();

        const button = event.target.closest("button");
        const originalHTML = button.innerHTML;

        // Update button state
        button.innerHTML =
          '<i class="fas fa-spinner fa-spin mr-3"></i>Preparando download...';
        button.disabled = true;

        const crm = document
          .getElementById("participant-crm")
          .textContent.trim();

        setTimeout(() => {
          button.innerHTML =
            '<i class="fas fa-check mr-3"></i>Download iniciado!';
          button.classList.add("bg-green-600");

          // Simulate download
          const link = document.createElement("a");
          link.href = `/certificado/${crm}`;
          link.download = `certificado_cardiologia_${crm}.pdf`;
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);

          setTimeout(() => {
            button.innerHTML = originalHTML;
            button.disabled = false;
            button.classList.remove("bg-green-600");
          }, 2000);
        }, 2500);
      }

      // Add interactive effects
      document.addEventListener("DOMContentLoaded", function () {
        // Animate cards on scroll
        const observerOptions = {
          threshold: 0.1,
          rootMargin: "0px 0px -50px 0px",
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.style.animationDelay = "0s";
              entry.target.classList.add("animate-slide-up");
            }
          });
        }, observerOptions);

        document.querySelectorAll(".medical-card, .info-grid").forEach((el) => {
          observer.observe(el);
        });

        // Add hover effects to info cards
        document.querySelectorAll(".medical-icon-bg").forEach((icon) => {
          icon.addEventListener("mouseenter", function () {
            this.style.transform = "scale(1.1)";
            this.style.transition = "transform 0.3s ease";
          });

          icon.addEventListener("mouseleave", function () {
            this.style.transform = "scale(1)";
          });
        });

        // Initial particle celebration
        setTimeout(() => {
          createCelebrationParticles();
        }, 1000);
      });

      // Add some medical-themed interaction
      document.querySelectorAll(".fas.fa-heartbeat").forEach((heart) => {
        heart.addEventListener("click", function () {
          this.style.color = "#dc2626";
          this.classList.add("animate-heartbeat");
          setTimeout(() => {
            this.style.color = "";
          }, 2000);
        });
      });
    </script>
